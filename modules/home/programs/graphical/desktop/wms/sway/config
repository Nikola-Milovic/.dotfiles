default_border none

bindsym Modifier4+t exec $term

bindsym Modifier4+Ctrl+q kill

# start dmenu (a program launcher)
# set $menu-run wofi --show drun --prompt search

# move focused workspace between monitors
bindsym Modifier4+Ctrl+greater move workspace to output right
bindsym Modifier4+Ctrl+less move workspace to output left

# change focus
bindsym Modifier4+Ctrl+h focus left
bindsym Modifier4+Ctrl+j focus down
bindsym Modifier4+Ctrl+k focus up
bindsym Modifier4+Ctrl+l focus right

# split in horizontal orientation
bindsym Modifier4+z split h

# split in vertical orientation
bindsym Modifier4+v split v

# enter fullscreen mode for the focused container
bindsym Modifier4+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym Modifier4+s layout stacking
bindsym Modifier4+w layout tabbed
bindsym Modifier4+e layout toggle split

# toggle tiling / floating
bindsym Modifier4+Shift+space floating toggle

# focus the parent container
bindsym Modifier4+a focus parent

# focus the child container
#bindsym Modifier4+d focus child
  
