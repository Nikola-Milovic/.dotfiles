assign [class="obsidian"] $workspace5

# NOTE: This is some real tom fooliery with my keyboard layout
#  ZMK will send a shift mod with the items that require a shift key on a
#  regular keyboard.  so though it defines a keycode as "LEFT_BRACE" it really
#  is shift_L + LEFT_BRACE.  So you will notice the odd peppering of shifts and
#  non shifts
# switch to workspace
#SWITCH TO CTRL
bindsym Modifier4+Ctrl+plus workspace $workspace1  
bindsym Modifier4+Ctrl+bracketleft workspace $workspace2  
bindsym Modifier4+Ctrl+braceleft workspace $workspace3
bindsym Modifier4+Ctrl+parenleft workspace $workspace4 
bindsym Modifier4+Ctrl+ampersand workspace $workspace5 
bindsym Modifier4+equal workspace $workspace6  
bindsym Modifier4+Ctrl+parenright workspace $workspace7   
bindsym Modifier4+Ctrl+braceright workspace $workspace8    
bindsym Modifier4+bracketright workspace $workspace9 
bindsym Modifier4+Ctrl+asterisk workspace $workspace10

# NOTE: since i have to press shift to get these symbols
# move focused container to workspace.
#  I wanted to use this as my method of moving spaces around, but it doesn't
#  seem to work, but when i provide the keycode + shift it seems to work well.
bindsym Modifier4+Shift+plus move container to workspace $workspace1   
bindsym Modifier4+Shift+bracketleft move container to workspace $workspace2
bindsym Modifier4+Shift+braceleft move container to workspace $workspace3
bindsym Modifier4+Shift+parenleft move container to workspace $workspace4
bindsym Modifier4+Shift+ampersand move container to workspace $workspace5
bindsym Modifier4+Shift+equal move container to workspace $workspace6
bindsym Modifier4+Shift+parenright move container to workspace $workspace7
bindsym Modifier4+Shift+braceright  move container to workspace $workspace8
bindsym Modifier4+Shift+bracketright move container to workspace $workspace9
bindsym Modifier4+Shift+asterisk move container to workspace $workspace10
